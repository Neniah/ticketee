<h2><%= @project.name %></h2>
<div class="row">
  <div class="col-md-6">
    <%= @project.description %>
  </div>
</div>

<div class="btn-group">
  <%= link_to "Delete Project",
      project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this project?"},
      class: 'btn btn-info'
      %>
  <%= link_to "Edit Project", edit_project_path(@project), class: 'btn btn-info' %>
  <% authorized?(:"create tickets", @project) do %>
    <%= link_to "New Ticket", new_project_ticket_path(@project) %>
  <% end %>
  <%= link_to 'Back Home', root_path , class: 'btn btn-info' %>
</div>

<ul id="tickets">
  <% @project.tickets.each do |ticket| %>
    <li>
      #<%= ticket.id %>
      <%= link_to ticket.title, [@project, ticket] %>
    </li>
  <% end %>
</ul>

<% admins_only do %>
  <%= link_to "Edit Project", edit_project_path(@project) %>
  <%= link_to "Delete Project", project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this Project?" } %>
<% end %>
