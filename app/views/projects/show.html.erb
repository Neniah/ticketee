
<h2><%= @project.name %></h2>
<div class="row">
  <div class="col-md-6">
    <%= @project.description %>
  </div>
</div>

<div class="btn-group">
  <%= link_to "Delete Project",
      project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this project?"},
      class: 'btn btn-info'
      %>
  <%= link_to "Edit Project", edit_project_path(@project), class: 'btn btn-info' %>
  <%= link_to "New Ticket", new_project_ticket_path(@project) %>
    <%= link_to 'Back Home', root_path , class: 'btn btn-info' %>
</div>
